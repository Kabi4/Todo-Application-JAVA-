<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.d3vilksk.DialogueController"
            >
<headerText>We can pur instructions here</headerText>
    <content>
        <GridPane vgap="10" hgap="10" >
            <Label   GridPane.rowIndex="0" GridPane.columnIndex="0" text="Title:" />
            <TextField fx:id="newTodoTitle" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Details:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea wrapText="true"  fx:id="newTodoDetials" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="newTodoDeadline" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    </GridPane>
    </content>
</DialogPane>
